<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AnalyticsActivity"
    tools:showIn="@layout/activity_analytics">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Your Analytics:"
        android:textColor="@color/darkRoyalBlue"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frequencyBtn"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:background="@color/darkRoyalBlue"
        android:text="Monthly Attendance"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/eventTypeBtn"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="308dp"
        android:background="@color/darkRoyalBlue"
        android:text=" Event Type "
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/frequencyBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="323dp"
        android:layout_height="230dp"
        android:layout_marginTop="36dp"
        android:text='On this page you can view your personal attendance data. In the "Monthly Attendance" tab you can see how many events you have attended per month this year. In the "Event Type" tab you can see a breakdown of what type of events you tend to attend. '
        android:textColor="#022244"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</android.support.constraint.ConstraintLayout>